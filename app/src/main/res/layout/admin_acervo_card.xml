<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/background"
    android:backgroundTint="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background">

        <ImageView
            android:id="@+id/imagem_admin_acervo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/titulo_admin_acervo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Titulo"
            style="@style/TitleText"
            app:layout_constraintStart_toEndOf="@+id/imagem_admin_acervo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/autor_admin_acervo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            style="@style/LightText"
            android:text="Autor"
            app:layout_constraintStart_toEndOf="@+id/imagem_admin_acervo"
            app:layout_constraintTop_toBottomOf="@+id/titulo_admin_acervo" />

        <Button
            android:id="@+id/edit_cervo_card"
            android:layout_marginEnd="15dp"
            style="@style/editar_borda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/del_acervo_card"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/del_acervo_card"
            android:layout_marginRight="10dp"
            style="@style/trash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>