<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ExemplarIndisponivelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/exemplar_indisponivel_capa"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/book_cover_placeholder" />



        <TextView
            android:id="@+id/textView56"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condições:" />

        <TextView
            android:id="@+id/exemplar_indisponivel_condicoes"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView58"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de Indisponibilidade:" />

        <TextView
            android:id="@+id/exemplar_indisponivel_data_indisponivel"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="TextView" />





        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/exemplar_indisponivel_ver_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                style="@style/botao"
                android:text="Ver Livro"/>

            <Button
                android:id="@+id/exemplar_indisponivel_editar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                style="@style/botao"
                android:text="Editar"/>


            <Button
                android:id="@+id/exemplar_indisponivel_inindisponivel_btn"
                style="@style/botao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Tornar Disponivel"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
